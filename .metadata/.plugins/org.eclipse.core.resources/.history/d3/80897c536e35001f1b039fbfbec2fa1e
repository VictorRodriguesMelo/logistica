package com.logistica.service;

import java.util.List;
import java.util.Objects;
import java.util.Optional;

import com.logistica.entity.Veiculo;
import com.logistica.repository.VeiculoRepository;

import jakarta.transaction.Transactional;

public class VeiculoService {


    private final VeiculoRepository veiculoRepository;

    public VeiculoService(VeiculoRepository veiculoRepository) {
        this.veiculoRepository = veiculoRepository;
    }

    public List<Veiculo> getStudents() {
        return veiculoRepository.findAll();
    }

    public void addNewStudent(Veiculo veiculo) {
        Optional<Veiculo> studentOptional = veiculoRepository.findStudentByEmail(veiculo.getEmail());
        if (studentOptional.isPresent()) {
            throw new IllegalStateException("email exist");
        }
        veiculoRepository.save(veiculo);
    }

    public void deleteStudent(Long studentId) {
        boolean exist = veiculoRepository.existsById(studentId);
        if (!exist) {
            throw new IllegalStateException("Student with ID " + studentId + " does not exist");
        }
        veiculoRepository.deleteById(studentId);
    }

    @Transactional
    public void updateStudent(Long studentId, String name, String email) {
        Veiculo veiculo = veiculoRepository.findById(studentId)
                .orElseThrow(() -> new IllegalStateException("Student with ID " + studentId + " does not exist"));

        if (name != null && name.length() > 0 && !Objects.equals(name, veiculo.getName())) {
            veiculo.setName(name);
        }

        if (email != null && email.length() > 0 && !Objects.equals(email, veiculo.getEmail())) {
            Optional<Veiculo> studentOptional = veiculoRepository.findStudentByEmail(email);
            if (studentOptional.isPresent()) {
                throw new IllegalStateException("email exist");
            }
            veiculo.setEmail(email);
        }

        veiculoRepository.save(veiculo);

    }

}
